# Git LFS Configuration for QGIS Geospatial Project
# This file ensures large binary files are handled by Git LFS

# =============================================================================
# RASTER DATA FILES (Large binary files - use LFS)
# =============================================================================

# GeoTIFF and TIFF files
*.tif filter=lfs diff=lfs merge=lfs -text
*.tiff filter=lfs diff=lfs merge=lfs -text
*.TIF filter=lfs diff=lfs merge=lfs -text
*.TIFF filter=lfs diff=lfs merge=lfs -text

# GeoTIFF auxiliary files
*.tif.aux.xml filter=lfs diff=lfs merge=lfs -text
*.tiff.aux.xml filter=lfs diff=lfs merge=lfs -text

# Other raster formats
*.img filter=lfs diff=lfs merge=lfs -text
*.IMG filter=lfs diff=lfs merge=lfs -text
*.hdf filter=lfs diff=lfs merge=lfs -text
*.HDF filter=lfs diff=lfs merge=lfs -text
*.nc filter=lfs diff=lfs merge=lfs -text
*.NC filter=lfs diff=lfs merge=lfs -text
*.grib filter=lfs diff=lfs merge=lfs -text
*.GRIB filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# VECTOR DATA FILES (Mixed - some need LFS, some don't)
# =============================================================================

# Shapefile components (DBF files can be large)
*.dbf filter=lfs diff=lfs merge=lfs -text
*.DBF filter=lfs diff=lfs merge=lfs -text

# Shapefile geometry and index files (usually small, but use LFS for safety)
*.shp filter=lfs diff=lfs merge=lfs -text
*.SHP filter=lfs diff=lfs merge=lfs -text
*.shx filter=lfs diff=lfs merge=lfs -text
*.SHX filter=lfs diff=lfs merge=lfs -text

# Projection and metadata files (small text files - no LFS needed)
*.prj text
*.PRJ text
*.cpg text
*.CPG text
*.qix text
*.QIX text
*.qmd text
*.QMD text

# GeoPackage files (can be large)
*.gpkg filter=lfs diff=lfs merge=lfs -text
*.GPKG filter=lfs diff=lfs merge=lfs -text

# Other vector formats
*.geojson filter=lfs diff=lfs merge=lfs -text
*.GEOJSON filter=lfs diff=lfs merge=lfs -text
*.kml filter=lfs diff=lfs merge=lfs -text
*.KML filter=lfs diff=lfs merge=lfs -text
*.kmz filter=lfs diff=lfs merge=lfs -text
*.KMZ filter=lfs diff=lfs merge=lfs -text
*.gml filter=lfs diff=lfs merge=lfs -text
*.GML filter=lfs diff=lfs merge=lfs -text
*.dxf filter=lfs diff=lfs merge=lfs -text
*.DXF filter=lfs diff=lfs merge=lfs -text
*.dwg filter=lfs diff=lfs merge=lfs -text
*.DWG filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# QGIS PROJECT FILES (Small text files - no LFS needed)
# =============================================================================

*.qgs text
*.QGS text
*.qgz text
*.QGZ text
*.qlr text
*.QLR text
*.qml text
*.QML text
*.qpt text
*.QPT text

# =============================================================================
# DATABASE FILES (Large binary files - use LFS)
# =============================================================================

*.sqlite filter=lfs diff=lfs merge=lfs -text
*.SQLITE filter=lfs diff=lfs merge=lfs -text
*.db filter=lfs diff=lfs merge=lfs -text
*.DB filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# COMPRESSED ARCHIVES (Large binary files - use LFS)
# =============================================================================

*.zip filter=lfs diff=lfs merge=lfs -text
*.ZIP filter=lfs diff=lfs merge=lfs -text
*.7z filter=lfs diff=lfs merge=lfs -text
*.7Z filter=lfs diff=lfs merge=lfs -text
*.rar filter=lfs diff=lfs merge=lfs -text
*.RAR filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.TAR filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.GZ filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# IMAGE FILES (Large binary files - use LFS)
# =============================================================================

*.png filter=lfs diff=lfs merge=lfs -text
*.PNG filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.JPG filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.JPEG filter=lfs diff=lfs merge=lfs -text
*.bmp filter=lfs diff=lfs merge=lfs -text
*.BMP filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text
*.GIF filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# DOCUMENTATION AND TEXT FILES (Small text files - no LFS needed)
# =============================================================================

*.md text
*.MD text
*.txt text
*.TXT text
*.csv text
*.CSV text
*.xml text
*.XML text
*.json text
*.JSON text

# =============================================================================
# EXECUTABLE AND INSTALLER FILES (Large binary files - use LFS)
# =============================================================================

*.exe filter=lfs diff=lfs merge=lfs -text
*.EXE filter=lfs diff=lfs merge=lfs -text
*.msi filter=lfs diff=lfs merge=lfs -text
*.MSI filter=lfs diff=lfs merge=lfs -text
*.dmg filter=lfs diff=lfs merge=lfs -text
*.DMG filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# 3D MODEL FILES (Large binary files - use LFS)
# =============================================================================

*.fbx filter=lfs diff=lfs merge=lfs -text
*.FBX filter=lfs diff=lfs merge=lfs -text
*.3ds filter=lfs diff=lfs merge=lfs -text
*.3DS filter=lfs diff=lfs merge=lfs -text
*.obj filter=lfs diff=lfs merge=lfs -text
*.OBJ filter=lfs diff=lfs merge=lfs -text
*.dae filter=lfs diff=lfs merge=lfs -text
*.DAE filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# AUDIO FILES (Large binary files - use LFS)
# =============================================================================

*.mp3 filter=lfs diff=lfs merge=lfs -text
*.MP3 filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.WAV filter=lfs diff=lfs merge=lfs -text
*.flac filter=lfs diff=lfs merge=lfs -text
*.FLAC filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# DESIGN FILES (Large binary files - use LFS)
# =============================================================================

*.psd filter=lfs diff=lfs merge=lfs -text
*.PSD filter=lfs diff=lfs merge=lfs -text
*.xcf filter=lfs diff=lfs merge=lfs -text
*.XCF filter=lfs diff=lfs merge=lfs -text
*.ai filter=lfs diff=lfs merge=lfs -text
*.AI filter=lfs diff=lfs merge=lfs -text
*.skp filter=lfs diff=lfs merge=lfs -text
*.SKP filter=lfs diff=lfs merge=lfs -text

# =============================================================================
# ENSURE PROPER LINE ENDINGS
# =============================================================================

# Ensure text files use LF line endings
*.txt text eol=lf
*.md text eol=lf
*.csv text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.qgs text eol=lf
*.qml text eol=lf
*.prj text eol=lf
*.cpg text eol=lf